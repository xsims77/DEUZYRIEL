{% extends "themes/base_homepage.html.twig" %}

{% block title %}
	Mon profil 
{% endblock %}

{% block description %}
	 Profil utilisateur 
{% endblock %}

{% block main %}
        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                        {% for message in app.flashes('success') %}
                            <div class="text-center alert alert-success alert-dismissible fade show" role="alert">
                                {{message}}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    <div class="card text-bg-secondary mt-5" style="max-width: 25rem;">
                        <div class="card-header fs-4">Mon profil</div>
                        <div class="card-body">
                            <h2 class="card-title text-center">Bonjour  </h2>
                            <p class="card-text">
                                <ul class="list-unstyled">
                                    <li class="fs-4">Nom :  </li>
                                    <li class="fs-4">Prénom : </li>
                                    <li class="fs-4">Email :  </li>
                                    <li class="fs-4">Ajouté le :  </li>
                                </ul>
                                <div class="d-flex flex-column w-75">
                                    <a href="{{path('profil.edit')}}" class="btn btn-info mb-3"><strong>Modifier mon profil</strong></a>
                                    <a href="{{path('profil.edit_password')}}" class="btn btn-warning "><strong>Modifier mon mot de passe</strong></a>
                                </div>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}
